{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "build/*",
    "build/**/*",
    "build/**/*.json",
    "scripts/**/*",
    "package.json",
    "packages/theme-chalk/*",
    "packages/element3/package.json"
  ],
  "exclude": ["**/__tests__/**", "**/tests/**", "**/dist"]
}
